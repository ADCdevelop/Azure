{
	"name": "AP_CleanCSVfile",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AP_RawDataCovidCases",
						"type": "DatasetReference"
					},
					"name": "SRCRawDataCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AP_CleanDataCovidCases",
						"type": "DatasetReference"
					},
					"name": "DSTCleanDataCSV"
				}
			],
			"transformations": [
				{
					"name": "RenameColumns"
				},
				{
					"name": "AddDateAndCleanText"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as long,",
				"          Updated as string,",
				"          Confirmed as integer,",
				"          ConfirmedChange as integer,",
				"          Deaths as integer,",
				"          DeathsChange as integer,",
				"          Recovered as integer,",
				"          RecoveredChange as integer,",
				"          Latitude as double,",
				"          Longitude as double,",
				"          ISO2 as string,",
				"          ISO3 as string,",
				"          Country_Region as string,",
				"          AdminRegion1 as string,",
				"          AdminRegion2 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SRCRawDataCSV",
				"AddDateAndCleanText select(mapColumn(",
				"          RowID = ID,",
				"          CasesConfirmed = Confirmed,",
				"          CasesConfirmedChange = ConfirmedChange,",
				"          Deaths,",
				"          DeathsChange,",
				"          CasesRecovered = Recovered,",
				"          CasesRecoveredChange = RecoveredChange,",
				"          Latitude,",
				"          Longitude,",
				"          ISO2,",
				"          ISO3,",
				"          Country = Country_Region,",
				"          Region1 = AdminRegion1,",
				"          Region2 = AdminRegion2,",
				"          Date",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns",
				"SRCRawDataCSV derive(Date = toDate(Updated, 'MM/dd/yyyy'),",
				"          Country_Region = replace(Country_Region, '\"', ''),",
				"          AdminRegion1 = replace(AdminRegion1, '\"', ''),",
				"          AdminRegion2 = replace(AdminRegion2, '\"', '')) ~> AddDateAndCleanText",
				"RenameColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          RowID as string,",
				"          CasesConfirmed as string,",
				"          CasesConfirmedChange as string,",
				"          Deaths as string,",
				"          DeathsChange as string,",
				"          CasesRecovered as string,",
				"          CasesRecoveredChange as string,",
				"          Latitude as string,",
				"          Longitude as string,",
				"          ISO2 as string,",
				"          ISO3 as string,",
				"          Country as string,",
				"          Region1 as string,",
				"          Region2 as string,",
				"          Date as string",
				"     ),",
				"     filePattern:'CleanBingCovidData',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> DSTCleanDataCSV"
			]
		}
	}
}