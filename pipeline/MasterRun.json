{
	"name": "MasterRun",
	"properties": {
		"activities": [
			{
				"name": "Run data flow for vaccinations",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "Copy to DataLake From GIT",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "1.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "ps_cov_tests",
						"type": "DataFlowReference"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			},
			{
				"name": "Get Data For REPORTING",
				"type": "DatabricksNotebook",
				"dependsOn": [
					{
						"activity": "Run data flow for vaccinations",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/Users/adcdev@outlook.com/PS_date_fix"
				},
				"linkedServiceName": {
					"referenceName": "AzureDatabricks1",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Copy to Local SSMS",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Get Data For REPORTING",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "SqlServerSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"tableOption": "autoCreate"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Country",
									"type": "String"
								},
								"sink": {
									"name": "Country"
								}
							},
							{
								"source": {
									"name": "ISO3",
									"type": "String"
								},
								"sink": {
									"name": "ISO3"
								}
							},
							{
								"source": {
									"name": "Date",
									"type": "DateTime"
								},
								"sink": {
									"name": "Date"
								}
							},
							{
								"source": {
									"name": "DailyConfirmedCases",
									"type": "Int32"
								},
								"sink": {
									"name": "DailyConfirmedCases"
								}
							},
							{
								"source": {
									"name": "DailyDeaths",
									"type": "Int32"
								},
								"sink": {
									"name": "DailyDeaths"
								}
							},
							{
								"source": {
									"name": "DailyRecovered",
									"type": "Int32"
								},
								"sink": {
									"name": "DailyRecovered"
								}
							},
							{
								"source": {
									"name": "DailyTests",
									"type": "Int32"
								},
								"sink": {
									"name": "DailyTests"
								}
							},
							{
								"source": {
									"name": "7DaysCumulatedTests",
									"type": "Int32"
								},
								"sink": {
									"name": "7DaysCumulatedTests"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "DelimitedText2",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "SqlServerTable2",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Copy to DataLake From GIT",
				"description": "Copy raw data files from Git Hub repository",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "HttpReadSettings",
							"requestMethod": "GET"
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ""
						}
					},
					"enableStaging": false,
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Warning",
							"enableReliableLogging": false
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "AzureDataLakeStorageLS",
								"type": "LinkedServiceReference"
							},
							"path": "rawdata/Logs"
						}
					},
					"dataIntegrationUnits": 2,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "GitRaw",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ADL_GitRawData",
						"type": "DatasetReference",
						"parameters": {
							"filename": {
								"value": "@concat('country_vaccinations_by_manufacturer_',formatDateTime(utcnow(),'yyyyMMdd_HHmm'),'.csv')",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Send Email Success",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Copy to Local SSMS",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://prod-86.eastus.logic.azure.com:443/workflows/e6b1f1398475445081885ef204b428ef/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=o9NwZudCze4x6UKAW7YuPvA277WGl-qYsImvO2wD8y8",
					"method": "POST",
					"body": {
						"value": "{\n\"datafactoryname\":\"@{pipeline().DataFactory}\"}",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Send Email Error",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Copy to Local SSMS",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://prod-02.eastus.logic.azure.com:443/workflows/0f8a822c89dd4f27a183c8170100a8ce/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=OMU5-Evd2xXVrRHiI1HGj6TcOKydBl_fcvB7-RXXlco",
					"method": "POST",
					"body": {
						"value": "{\n\"datafactoryname\":\"@{pipeline().DataFactory}\"}",
						"type": "Expression"
					}
				}
			}
		],
		"annotations": []
	}
}